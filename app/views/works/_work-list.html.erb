<ul>
  <% works.each do |work| %>
    <li>
      <strong><%= link_to work.title, work_path(work.id) %></strong>
      <%= "by #{work.creator}" unless work.creator.empty? %>
      <%= "(#{work.publication_year})" if work.publication_year %>
      <%= link_to "Upvote", upvote_path(work.id) %>
    </li>
  <% end %>
</ul>
