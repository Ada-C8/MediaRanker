<%= render partial: 'layouts/header' %>

<h3> Edit this  </h3>

<%= form_for @work do |f| %>
    <%= f.label :category %>
    <%= f.select :category, [['Album', 'album'], ['Book', 'book'], ['Movie', 'movies']] %>
    <br />
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br />
    <%= f.label :creator %>
    <%= f.text_field :creator %>
    <br />
    <%= f.label :published %>
    <%= f.text_field :published %>
    <br />
    <%= f.label :description %>
    <%= f.text_area :description %>
    <br />

    <%= f.submit %>

<% end %>
