<main>

  <h3>Edit this <%= @work.category.capitalize %></h3>

  <section>
    <% if @work.errors.any? %>
  <ul class="errors">
    <% @work.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>
    <%= render partial: "form", locals: {button_name: "Update Work"} %>
  </section>

</main>
