<main class="row">
  <h3>Edit this Album</h3>
  <section>
    <%= form_for @work do |f| %>
      <%= f.label :category %>
      <%= f.select :category, [['Album','album'],['Book','book'],['Movie', 'movie']] %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :creator %>
      <%= f.text_field :creator %>
      <%= f.label :publication_year %>
      <%= f.text_field :publication_year %>
      <%= f.label :description %>
      <%= f.text_field :description %>
      <%= f.submit "Update Work", class: "button" %>
    <% end %>
  </section>
</main>
