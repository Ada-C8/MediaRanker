<ul>
  <% @work.errors.messages.each do |attr, message| %>
    <li>class='error'><%= message[0] %></li>
  <% end %>
</ul>

<%= form_for @work do |f| %>

<%= f.label :category %>
<%= f.select :category, [['album'], ['book'], ['movie']] %>

<%= f.label :title %>
<%= f.text_field :title, required: true %>

<%= f.label :creator %>
<%= f.text_field :creator, required: true %>

<%= f.label :publication_year %>
<%= f.number_field :publication_year%>

<%= f.label :description %>
<%= f.text_area :description%>

<%= f.submit action_name %>
<% end %>
