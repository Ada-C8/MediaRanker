<main class="row">
<h3>Add a new work</h3>
<% if @work.errors.any? %>
  <ul class="errors">
    <% @work.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @work do |f| %>
<%= f.label :category %>
<%= f.select :category, ['book', 'movie', 'album'] %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :creator %>
<%= f.text_field :creator %>
<%= f.label :publication_year %>
<%= f.text_field :publication_year %>
<%= f.label :description %>
<%= f.text_area :description %>
<div class="button">
  <%= f.submit action_name %>
</div>
<% end %>
</main>
