<%= render partial: "layouts/error-messages", locals: {item: @work} unless @work.errors.messages.empty? %>

<%= form_for @work do |f| %>
  <%= f.label :category %>
  <%= f.select :category, ( Work.all_categories ) %>

  <%= f.label :title %>
  <%= f.text_area :title %>

  <%= f.label :creator %>
  <%= f.text_area :creator %>

  <%= f.label :publication_year %>
  <%= f.text_area :publication_year %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit submit_msg %>
<% end %>
