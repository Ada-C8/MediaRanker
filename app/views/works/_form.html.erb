
<% if @work.errors.any? %>
  <ul class="errors">
    <% @work.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>
<section>

<%= form_for @work do |f| %>
  <%= f.label :category %>
  <%= f.select :category, [['book'], ['album'], ['movie']] %>

  <%= f.label :title %>
  <%= f.text_field :title %>
<hr />
  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label 'Publication Year' %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_field :description %>


  <%= f.submit class: "button" %>
<% end %>
</section>
