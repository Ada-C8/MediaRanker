<% if @work.errors.any? %>
  <ul>
    <% @work.errors.each do |column, message| %>
      <li>
        <%= column.capitalize %><%= message %>
      </li>
    <% end %>
  </ul>
<% end %>


<%= form_for @work do |f| %>
  <%= f.label :category %>
  <%= f.text_field :category %>

  <%= f.label :title %>
  <%= f.text_field :title %>

   <%= f.label :creator %>
   <%= f.text_field :creator %>

   <%= f.label :publication_year %>
   <%= f.text_field :publication_year %>

   <%= f.label :description %>
   <%= f.text_field :description %>

  <%= f.submit "submit" %>
<% end %>
