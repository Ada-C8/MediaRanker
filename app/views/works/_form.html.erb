<%= form_for @work do |f| %>
  <%= f.label :Category %>
  <%= f.select :category, options_for_select(["album", "book", "movie"]) %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :Creator %>
  <%= f.text_field :creator %>

  <%= f.label :"Publication year" %>
  <%= f.text_field :publication_year %>

  <%= f.label :Description %>
  <%= f.text_area :description %>

  <%= f.submit submit_name %>
<% end %>

