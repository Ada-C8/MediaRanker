<section>
  <% if @work.errors.any? %>
    <ul class="errors">
      <% @work.errors.each do |column, message| %>
        <li>
          <strong><%= column.capitalize %></strong> <%= message %>
        </li>
      <% end %>
    </ul>
  <% end %>
</section>

<%= form_for @work do |f| %>
  <p>
    <%= f.label :category%>
    <%= f.select :category, ['album','book','movie'], :prompt => 'Select One' %>
  </p>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :creator %>
    <%= f.text_field :creator %>
  </p>

  <p>
    <%= f.label :publication_year %>
    <%= f.text_field  :publication_year %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>

  <%= f.submit some_var, :class => 'button' %>
<% end %>
