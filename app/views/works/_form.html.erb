<section>
  <% if @work.errors.any? %>
    <ul>
      <% @work.errors.each do |column, message| %>
        <li>
          <strong><%= column.capitalize %></strong> <%= message %>
        </li>
      <% end %>
    </ul>
  <% end %>
</section>

<section>
  <%= form_for @work do |f| %>
    <%= f.label "Media Type" %>
    <%= f.select :category, options_for_select(['book', 'movie', 'album']) %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :creator %>
    <%= f.text_field :creator %>

    <%= f.label "Publication Year" %>
    <%= f.text_field :pub_year %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.submit %>
  <% end %>
</section>
