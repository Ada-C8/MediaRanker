<section>
<%= form_for @work do |f| %>

  <%= f.label :category %>
  <%= f.select :category, [['Album','album'],['Book','book'],['Movie','movie']], required: true %>

  <%= f.label :title %>
  <%= f.text_field :title , required: true %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit%>
<% end %>
</section>
