<%= form_for @work do |f| %>
<%= f.label :category %>
<%= f.select :category, Work::CATEGORIES, {include_blank: 'Select a category'} %>

<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :creator %>
<%= f.text_field :creator %>

<%= f.label :publication_year %>
<%= f.text_field :publication_year %>

<%= f.label :description %>
<%= f.text_field :description %>

<%= f.submit %>
<% end %>
