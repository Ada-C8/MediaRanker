<%= form_for @work do |f| %>

  <%= f.label :category %>
  <%= f.select :category, options_for_select(@work_categories) %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year, "Publication year" %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit submit_name %>
<% end %>
