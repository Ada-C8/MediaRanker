<section class="flash">
  <% flash.each do |name, message| %>
    <div class="<%= name %>">
      <%= message %>
      <ul class="errors">
        <% if @work %>
          <% @work.errors.each do |column, message| %>
            <li>
              <%= "#{column}: #{message}" %>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  <% end %>
</section>
