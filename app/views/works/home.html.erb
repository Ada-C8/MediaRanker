<main class="row">
      <section class="row spotlight">
    <div>
      <h3> <% @top_work.title %></h3>

      <h3><span class="media-spotlight-header">Media Spotlight</span> <%= link_to @top_work.title , work_path(@top_work.id) %> by: <% @top_work.creator %></h3>
      <p><%= @top_work.votes.count %> - <%= @top_work.description %> </p>
    </div>
  </section>

<hr class="root-hr" />

<section class="top-ten columns large-4 small-12">
  <h3>Top Movies</h3>
  <ul>
    <% @top_movies.each do |w| %>
      <li>
        <h4>
          <%= link_to w[0].title, work_path(w[0].id) %>
          <small>by <%= w[0].creator %></small>
        </h4>
        <p><%= w[1] %> votes</p>
      </li>
      <% end %>
  </ul>
  <!-- <a href="/works.movies">View More Movies</a> -->
</section>

