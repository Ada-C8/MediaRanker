<% if @spotlight %>
<section class="row spotlight">
  <div>
    <h3>
      <span class="media-spotlight-header">Media Spotlight</span>
       <%= link_to @spotlight.title, work_path(@spotlight.id) %>
    </h3>
    <p><%= @spotlight.votes.count %> votes!</p>
  </div>
</section>

<hr class="root-hr">
<% end %>

<% @limited_works.each do |key, array| %>
<section class="top-ten columns large-4 small-12">
  <h3><%= "Top #{key.capitalize}" %></h3>
  <ul>
    <% array.each do |work| %>
    <li>
      <h4>
        <%= link_to "#{work.title}", work_path(work.id) %><small> by <%= work.creator %></small>
      </h4>
      <p><%= "#{work.votes.count} votes" %></p>
    </li>
    <% end %>
  </ul>
</section>
<% end %>
