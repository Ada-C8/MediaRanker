
<section class="spotlight">
  <h3><span class="media-spotlight-header">Media Spotlight:</span> <%= link_to Work.top_work.title, work_path(Work.top_work.id) %> by <%= Work.top_work.creator %></h3>
  <p><%= Work.top_work.votes.count %> votes - <%= Work.top_work.description %></p>
</section>

<hr class="root-hr">

<section class="top-ten columns large-4 small-12">
  <h3>Top Books</h3>
  <ul>
    <% @top_books.each do |book| %>
    <li>
      <h4><%= link_to book.title, work_path(book.id) %><small> by <%= book.creator %></small></h4>
    </li>
    <p><%= book.votes.count %> votes</p>
    <% end %>
  </ul>
</section>

