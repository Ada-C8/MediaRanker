<%= form_for @work, :html => {:class => 'new-work', :id => 'new-work'} do |f| %>
  <%= f.label :category %>
  <%= f.select :category, [['album'], ['book'], ['movie']] %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit %>
<% end %>
