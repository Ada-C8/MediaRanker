<h1>Add new Work</h1>


<%= form_for @work do |w| %>

  <%= w.label :title %>
  <%= w.text_field :title %>

  <%= w.label :category %>
  <%= w.text_field :category %>

  <%= w.label :creator %>
  <%= w.text_field :creator %>

  <%= w.label "Publication year" %>
  <%= w.text_field :year %>

  <%= w.label "Description" %>
  <%= w.text_field :description %>

  <%= w.submit "Create Work" %>

  <% end %>
