<h1>Works#new</h1>
<p>Find me in app/views/works/new.html.erb</p>

<% if @work.errors.any? %>
  <ul class="errors">
    <% @work.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @work do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label "Category" %>
  <%= f.select :category_id, options_from_collection_for_select(Category.all, "id", "name") %>

  <%= f.submit %>

<% end %>
