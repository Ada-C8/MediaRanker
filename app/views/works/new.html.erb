<h2>Add new work</h2>

<%#= render partial: 'layouts/error_messages',
    locals: { model: @work } %>

<%= form_for @work do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %>

  <%= f.label "Creator" %>
  <%= f.text_field :creator %>

  <%= f.label "Category" %>
  <%= f.select(:category, options_for_select(["album", "book", "movie"])) %>

  <%= f.label "Publication_year" %>
  <%= f.text_field :publication_year %>

  <%= f.label "Description" %>
  <%= f.text_field :description %>

  <%= f.submit "Create work", :class=>"button"  %>

<% end %>
