<h1>Welcome to Media Ranker</h1>

<h2>Media Spotlight: Link to Top Vote Getter</h2>

<table>

<tr>
  <th>
    Votes
  </th>
  <th>
    Category
  </th>
  <th>
    Title
  </th>
  <th>
    Creator
  </th>
  <th>
    Publication Year
  </th>
  <th>
    Description
  </th>
  <th>
    VOTE!
  </th>
</tr>

<% @works.each do |work| %>
<tr>
  <td>
    Votes Will Go Here
  </td>
  <td>
    <%= work.category %>
  </td>
  <td>
    <%= link_to work.title, work %>
  </td>
  <td>
    <%= work.creator %>
  </td>
  <td>
    <%= work.publication_year %>
  </td>
  <td>
    <%= work.description %>
  </td>
  <td>
    <%= link_to "Vote", new_vote_path %>
  </td>
</tr>
<% end %>

</table>
