<main class="row">
  <h3>List of Works </h3>

  <section>
    <h4>Albums</h4>
    <table>
      <thead>
        <tr>
          <th>Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th>Published</th>
          <th>Upvote</th>
        </tr>
      </thead>
      <tbody>
        <% @works.where(category: "album").each do |work| %>
          <tr>
            <td><%= Vote.where(work_id: work.id).count %></td>
            <td><%= link_to work.title, work_path(work.id)%></td>
            <td><%= work.creator %></td>
            <td><%= work.publication_year %></td>
            <td>
              <%= link_to "Upvote", votes_path(
                :vote => {
                  user_id: session[:logged_in_session],
                  work_id: work.id
                }
              ), method: :post, class:"button" %>
            </td>
          </tr>
        <% end %>
      </tbody>

    </table>
  </section>

