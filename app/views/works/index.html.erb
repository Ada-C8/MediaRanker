<h1>Works#index</h1>
<% @works.each do |category, works| %>
<article id= <%="top-#{category}" %> class="top-media">
  <h2><%= "Top #{category.upcase}" %></h2>
  <td>
    <table class="table">
  <tr>
  <th>
    Votes
  </th>
  <th>
    Title
  </th>
  <th>
    Created By
  </th>
  <th>
    Published
  </th>
  <th>
    Upvote
  </th>
</tr>
    <% works.each do |work| %>
    <tr>
    <td>
      <%= work.votes.length %>
    </td>
    <td>
      <%= link_to(work.title, work_path(work.id)) %>
    </td>
    <td>
      <%= work.creator %>
    </td>
    <td>
      <%= work.publication_year %>
    </td>
    <td>
      <%= link_to'upvote', edit_work_path(work.id), method: :patch%>
    </td>
  </tr>
    <% end %>
</table>
  <hr />
  <%end %>

<p>Find me in app/views/works/index.html.erb</p>
