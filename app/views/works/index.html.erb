<h1>Works#index</h1>
<p>Find me in app/views/works/index.html.erb</p>
<section>
    <% @works.each do |work| %>
    <article>
      <p>Title: <%= link_to(work.title, work_path(work.id)) %></p>
      <p>Category: <%= work.category %></p>
      <%= link_to("Edit", edit_work_path(work.id)) %>
      <%= link_to("Delete", work_path(work.id), method: :delete) %>
      <hr>
    </article>
    <% end %>
</section>
