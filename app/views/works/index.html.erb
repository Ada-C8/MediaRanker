<h1> List of Works </h1>

<% @works.each do |key, array| %>
  <h2><%= key %></h2>
  <table>
    <tr>
      <th>Votes</th>
      <th>Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Upvote</th>
    </tr>
    <% array.each do |work| %>
      <tr>
        <td><%= work.votes.count %></td>
        <td><%= link_to "#{work.title}", work_path(work.id) %></td>
        <td><%= work.creator %></td>
        <td><%= work.publication_year %></td>
        <td><%= link_to "Upvote", votes_path(work: work), class: "button", method: :post %></td>
      </tr>
    <% end %>
  </table>
<% end %>
