<h3>List of works</h3>
<section class="media-table">
<h4>Albums</h4>
<table>
  <thead>
    <tr>
      <th width="80">Votes</th>
      <th>Title</th>
      <th>Created by</th>
      <th width="100">Published</th>
      <th width="100">Upvote</th>
    </tr>
  </thead>

  <tbody>
    <% @works.each do |work| %>
    <tr>
      <td>!</td>
      <td><%= link_to(work.title, work_path(work.id), alt: 'link to', class: "title") %></td>
      <td><%= work.creator%></td>
      <td><%= work.publication_year%></td>
      <td><%= link_to "Upvote", root_path, class: "button upvote" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</section>
