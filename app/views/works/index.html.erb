<h3>Lists of works</h3>
<h4> Albums </h4>
<table>
  <tr>
    <th>Votes</th>
    <th>Title</th>
    <th>Created By</th>
    <th>Published</th>
    <th>Upvote</th>
  </tr>

  <% @albums.each do |work| %>
  <tr>
    <td> <%= work.votes.count %> </td>
    <td><%= link_to work.title, work_path(work.id) %></td>
    <td><%= work.creator %></td>
    <td><%= work.publication_year %></td>
    <% if session[:user_id] == nil %>
    <td> <%= link_to 'Upvote', works_path%></td>
    <% else %>
    <td><%= link_to 'Upvote', create_vote_path(user_id: session[:user_id], work_id: work.id), method: :post%></td>
    <% end %>
  </tr>
  <% end %>
</table>

