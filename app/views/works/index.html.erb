<section>
    <h3>
      List of Works
    </h3>

    <% @category = "album" %>
    <%= render partial: 'list' %>

    <h4> Albums
    </h4>
      <table>
        <thead>
          <tr>
            <th>Votes</th>
            <th>Title</th>
            <th>Created By</th>
            <th>Published</th>
            <th>Upvote</th>
          </tr>
        </thead>
        <tbody>
          <% @works.each do |work| %>
            <% if work.category == "album" %>
              <tr>
                <td> <%= work.votes.count %> </td>
                <td> <%= work.title %> </td>
                <td> <%= work.creator %> </td>
                <td> <%= work.publication_year %> </td>
                <td> upvote button </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>

      <h4> Books
      </h4>
        <table>
          <thead>
            <tr>
              <th>Votes</th>
              <th>Title</th>
              <th>Created By</th>
              <th>Published</th>
              <th>Upvote</th>
            </tr>
          </thead>
          <tbody>
            <% @works.each do |work| %>
              <% if work.category == "book" %>
                <tr>
                  <td> <%= work.votes.count %> </td>
                  <td> <%= work.title %> </td>
                  <td> <%= work.creator %> </td>
                  <td> <%= work.publication_year %> </td>
                  <td> upvote button </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>

        <h4> Movies
        </h4>
          <table>
            <thead>
              <tr>
                <th>Votes</th>
                <th>Title</th>
                <th>Created By</th>
                <th>Published</th>
                <th>Upvote</th>
              </tr>
            </thead>
            <tbody>
              <% @works.each do |work| %>
                <% if work.category == "movie" %>
                  <tr>
                    <td> <%= work.votes.count %> </td> 
                    <td> <%= work.title %> </td>
                    <td> <%= work.creator %> </td>
                    <td> <%= work.publication_year %> </td>
                    <td> upvote button </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
</section>
