<%= render partial: 'layouts/header' %>



<h3> List of works </h3>

<section>
  <h4>
    Albums
  </h4>
  <table>
    <thead>
      <tr>
        <th>
          Votes
        </th>
        <th>
          Title
        </th>
        <th>
          Created By
        </th>
        <th>
          Published
        </th>
        <th>
          Upvote
        </th>
      </tr>
    </thead>
    <tbody>
      <% @albums.each do |album| %>
      <tr>
        <td>
          <%= votes_for_work(album) %>
        </td>

        <td>
          <%= link_to album.title, work_path(album) %>
        </td>

        <td>
          <%= album.creator %>
        </td>

        <td>
          <%= album.published %>
        </td>

        <td>
          <%= link_to 'Upvote', upvote_work_path(album), method: :post %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</section>

