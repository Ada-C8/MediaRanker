<h3> List of Works </h3>

<% @works.each do |key, array| %>
<section class="media-table">
  <h4><%= key %></h4>
  <table>
    <thead>
      <tr>
        <th>Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Upvote</th>
      </tr>
    </thead>
    <tbody>
    <% array.each do |work| %>
      <tr>
        <td><%= work.votes.count %></td>
        <td><%= link_to "#{work.title}", work_path(work.id) %></td>
        <td><%= work.creator %></td>
        <td><%= work.publication_year %></td>
        <td><%= link_to "Upvote", votes_path(work: work), class: "button upvote", method: :post %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>
<% end %>
