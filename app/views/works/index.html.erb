        <td><%= link_to(work.title, work_path(work.id)) %></td>
        <td><%= work.creator %></td>
        <td><%= work.publication_year %></td>
        <td><%= link_to("Upvote") %></td>
      </tr><!-- End loop  -->
      <% end %>
    </tbody>
  </table>

  <h2>Movies</h2>
  <table>
    <thead>
      <tr>
        <th>Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Upvote</th>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |work| %>
      <tr><!-- For each vote a user has  -->
        <td><%= work.votes.length %></td>
        <td><%= link_to(work.title, work_path(work.id)) %></td>
        <td><%= work.creator %></td>
        <td><%= work.publication_year %></td>
        <td><%= link_to("Upvote", upvote_work_path(work.id), method: :post) %></td>
      </tr><!-- End loop  -->
      <% end %>
    </tbody>
  </table>

</section>
