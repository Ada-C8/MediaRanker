<h3>List of works</h3>

<% @types.each do |type| %>
<section>
  <h4><%= type %></h4>
  <table>
    <thead>
      <tr>
        <th>
          Votes
        </th>
        <th>
          Title
        </th>
        <th>
          Created By
        </th>
        <th>
          Published
        </th>
        <th>
          Upvote
        </th>
      </tr>
    </thead>

    <tbody>
      <% @works.each do |work| %>
        <% if work.category == type %>
          <tr>
            <td>
              <%= work.votes.count %>
            </td>
            <td>
              <%=link_to work.title, work_path(work.id) %>
            </td>
            <td>
              <%=work.creator%>
            </td>
            <td>
              <%=work.year%>
            </td>
            <td>
              <%= link_to "Upvote" %>
            </td>
          </tr>
        <%end%>
      <%end%>
    </tbody>
  </table>
</section>
<% end %>
