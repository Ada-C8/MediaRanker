<h1>All Media </h1>

<section>
  <% @works_by_category.each do |category, works| %>
    <h3><%= category.pluralize.capitalize%></h3>

    <table>
      <thead>
        <tr>
          <th>Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th>Released</th>
          <th>Vote</th>
        </tr>
      </thead>
      <tbody>
        <% works.each do |work|%>
          <tr>
            <td><%= work.votes_count%></td>
            <td><%= link_to "#{work.title}", work_path(work.id)%></td>
            <td> <%=work.creator%> </td>
            <td> <%=work.publication_year%> </td>
            <td class = "button"><%=link_to "Upvote",vote_path(work.id)%></td>
          </tr>
        <% end %>
      </tbody>
      </table>
  <% end %>

  <%=link_to "Back to Media Ranks", root_path, :class => "button"%>
  <%=link_to "Add new", new_work_path, :class => "button"%>
</section>
