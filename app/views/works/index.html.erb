<h1>Works index view</h1>
<h2>List of works</h2>
<h3>albums</h3>
<table>
  <tr>
    <th>Votes</th>
    <th>Title</th>
    <th>Created By</th>
    <th>Published</th>
    <th>Upvote</th>
  </tr>

  <% @albums.each do |work| %>
    <tr>
      <td><%= work.votes.count %></td>
      <td><%= work.title %></td>
      <td><%= work.creator %></td>
      <td><%= work.publication_year %></td>
      <td>upvote link here</td>
    </tr>
  <% end %>
</table>

