<main class="row">
  <h3>List of Works </h3>

  <section>
    <h4 class="black">Albums</h4>
    <table>
      <thead>
        <tr>
          <th width="80">Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th width="100">Published</th>
          <th width="100">Upvote</th>
        </tr>
      </thead>
      <tbody>
        <% @works.where(category: "album").each do |work| %>
          <tr>
            <td><p><%= Vote.where(work_id: work.id).count %></p></td>
            <td><%= link_to work.title, work_path(work.id)%></td>
            <td class="black"><%= work.creator %></td>
            <td class="black"><%= work.publication_year %></td>
            <td>
              <%= link_to "Upvote", votes_path(
                :vote => {
                  user_id: session[:logged_in_session],
                  work_id: work.id
                }
              ), method: :post, class:"button" %>
            </td>
          </tr>
        <% end %>
      </tbody>

    </table>
  </section>

