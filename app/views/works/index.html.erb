<h3>
  List of works
</h3>

<main>
  <section class="media table">
    <h4>Albums</h4>
    <%= render partial: 'media_table', locals: {media_type: "album"}%>
  </section>

  <h4>Books</h4>
  <section class="media table">
    <%= render partial: 'media_table', locals: {media_type: "book"}%>
  </section>

  <h4>Movies</h4>
  <section class="media table">
    <%= render partial: 'media_table', locals: {media_type: "movie"}%>
  </section>

  <%= link_to "View top media", root_path, class: "button"%>
  <%= link_to "Add a new work", new_work_path, class: "button"%>
</main>
