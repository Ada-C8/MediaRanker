<p>Find me in app/views/works/index.html.erb</p>

<%= link_to "Add Work", new_work_path %>

<h3>Albums</h3>
<ul>
  <% @works.each do |work| %>
    <% if work.category == "album" %>
      <li><%=link_to(work.title, work_path(work.id)) %></li>
    <% end%>
  <% end %>
</ul>



