<h3>List of Works</h3>

<section class="media-table">
  <h4>Books</h4>
  <table>
    <tr>
      <th width="80">Votes</th>
      <th>Title</th>
      <th>Author</th>
      <th width="80">Published</th>
      <th width="80">Upvote</th>
    </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.votes.size %></td>
      <td><%= link_to book.title, work_path(book.id) %></td>
      <td><%= book.creator %></td>
      <td><%= book.publication_year %></td>
      <td><%= link_to "Upvote", votes_path(work_id: book.id, user_id: session[:user_id]), method: :post, class: "button vote" %></td>
    </tr>
  <% end %>
  </table>
</section>
