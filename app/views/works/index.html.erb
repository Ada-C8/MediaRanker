<h1>List of Works</h1>
<h2>Books</h2>
<table>
  <tr>
    <th>Votes</th>
    <th>Title</th>
    <th>Creator</th>
    <th>Published</th>
    <th>UpVote</th>
  </tr>
  <% @books.each do |work| %>
  <tr>
    <td><%= work.upvotes.count %></td>
    <td><%=link_to work.title, work_path(work.id)%></td>
    <td><%=work.creator%></td>
    <td><%=work.publication_year%></td>
    <td><%=link_to "Upvote", upvote_path(work.id), method: :post%></td>
  </tr>
  <% end %>
</table>

