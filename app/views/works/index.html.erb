<section>
  <h3>All Works</h3>

  <article>
    <h4>Albums</h4>
    <table>
      <tr>
        <th>Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Upvote</th>
      </tr>

      <% @works.each do |work| %>
        <% if work.category == "album" %>
          <tr>
            <td><%= work.votes.count %></td>
            <td><%= link_to work.title, work_path(work.id) %></td>
            <td><%= work.creator %></td>
            <td><%= work.publication_year%></td>
            <td><%= link_to "Upvote", upvote_path(work.id), method: :post %></td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </article>

