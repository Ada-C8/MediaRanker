<h1>Works#index</h1>
<p>Find me in app/views/works/index.html.erb</p>

<%= link_to "Add Work", new_work_path %>

<h3>Albums</h3>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Created By</th>
      <th>Published</th>
    </tr>
  </thead>
    <% @works.each do |work| %>
      <% if work.category == "album" %>
      <tbody>
        <td><%=link_to(work.title, work_path(work.id)) %></td>
        <td><%=work.creator%></td>
        <td><%=work.publication_year%></td>
      <% end%>
    <% end %>
  </tbody>
</table>

