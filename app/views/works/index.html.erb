              <td><%= work.creator %></td>
              <td><%= work.year %></td>
              <td><%= link_to "Upvote", new_work_vote_path(work[:id]), class: "button" %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </section>

  <section class="work-list">
    <h3 class="list-title">Movies</h3>
    <table class="book-list">
      <thead>
        <tr>
          <th width="80">Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th width="100">Published</th>
          <th width="100">Upvote</th>
        </tr>
      </thead>
      <tbody>
        <% @works.each do |work| %>
          <% if work.category == "movie" %>
