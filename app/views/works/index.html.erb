
<h3>List of Works</h3>
<h4>Albums</h4>
<table>
  <th width="80">Votes</th>
  <th>Title</th>
  <th>Creator</th>
  <th width="100">Published</th>
  <th width="100">UpVote</th>

  <% @works.each do |work| %>
    <% if work.category == "album" %>
      <tr>
        <td><%= work.votes.count %></td>
        <td><%= link_to work.title, work_path(work.id) %></td>
        <td><%= work.creator %></td>
        <td><%= work.publication_year %></td>
        <!-- TODO: The Upvote path is works_path because the bottonn format would not work without a path.   -->
        <td><%= link_to "UpVote", works_path, class: "button" %></td>
      </tr>
    <% end %>
  <% end %>
</table>

