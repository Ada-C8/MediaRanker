<h2>List of Works</h2>

<h3> Albums </h3>

<table>
  <thead>
    <tr>
      <th>Votes</th>
      <th>Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Upvote</th>
    </tr>
  </thead>
      <% @works.each do |work| %>
        <% if work.category == "album" %>
  <tbody>
    <tr>
      <td><%= work.votes.count %></td>
      <td><%= link_to work.title, work_path(work.id) %></td>
      <td><%= work.creator %></td>
      <td><%= work.publication_year %></td>
      <td><%= button_to 'Upvote', work_votes_path(work.id), method: :post %></td>
        <% end %>
      <% end %>
    </tr>
  </tbody>
</table>


