<h1>List of works</h1>

<h2>Albums</h2>
<table>
  <thead>
    <tr>
      <th width="50">Votes</th>
      <th width="100">Title</th>
      <th width="100">Created By</th>
      <th width="100">Published</th>
      <th width="50">Upvote</th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |work| %>
    <tr>
      <td> <%= work.votes.count %> </td>
      <td><%= link_to(work.title, work_path(work.id)) %></td>
      <td><%= work.creator %></td>
      <td><%= work.publication_year %></td>
      <td>Upvote</td>
    </tr>
    <% end %>
  </tbody>
</table>

