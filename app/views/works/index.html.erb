<h3>List of Works</h3>

<article>
<h4>Albums</h4>
  <table>
    <thead>
      <tr>
        <th>Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Upvote</th>
      </tr>
    </thead>
    <tbody>
      <% @works.each do |w| %>
      <% if w.category == "album" %>
      <tr>
        <td><%= w.votes.count %></td>
        <td><%= link_to w.title, work_path(w.id) %></td>
        <td><%= w.creator %></td>
        <td><%= w.publication_year %></td>
        <td><%= link_to "Upvote", new_vote_path(w.id), method: :post, class: "button" %></td>
      </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

