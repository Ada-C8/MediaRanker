<h1>List of Works</h1>
<section>
  <h2>Albums</h2>
  <table>
    <thead>
      <tr>
        <th>Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Upvote</th>
      </tr>
    </thead>
    <tbody>
      <% @albums.each do |work| %>
      <tr><!-- For each vote a user has  -->
        <td><%= work.votes.length %></td>
        <td><%= link_to(work.title, work_path(work.id)) %></td>
        <td><%= work.creator %></td>
        <td><%= work.publication_year %></td>
        <td><%= link_to("Upvote") %></td>
      </tr><!-- End loop  -->
      <% end %>
    </tbody>
  </table>

  <h2>Books</h2>
  <table>
    <thead>
      <tr>
        <th>Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Upvote</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |work| %>
      <tr><!-- For each vote a user has  -->
