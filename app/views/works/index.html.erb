<h3>List of Works</h3>
<section class="media-table">
  <h4>Albums</h4>
  <table>
    <thead>
      <tr>
        <th width="80">Votes</th>
        <th>Title</th>
        <th>Creator</th>
        <th width="100">Published</th>
        <th width="100">UpVote</th>
      </tr>
    </thead>
    <tbody>
    <% @albums.each do |work| %>
      <tr>
        <td><%= work.upvotes.count %></td>
        <td><%=link_to work.title, work_path(work.id)%></td>
        <td><%=work.creator%></td>
        <td><%=work.publication_year%></td>
        <td><%=link_to "Upvote", upvote_path(work.id), method: :post, class:'button'%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</section>

