<h3>Lists of works</h3>
<h4> Albums </h4>
<table>
  <tr>
    <th>Votes</th>
    <th>Title</th>
    <th>Created By</th>
    <th>Published</th>
    <th>Upvote</th>
  </tr>

  <% @albums.each do |work| %>
  <tr>
    <td> <%= work.votes.count %> </td>
    <td><%= link_to work.title, work_path(work.id) %></td>
    <td><%= work.creator %></td>
    <td><%= work.publication_year %></td>
    <td><%= link_to "Upvote", new_vote_path %></td>
  </tr>
  <% end %>
</table>

