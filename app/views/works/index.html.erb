<div class="row">
  <section class="all-media">
    <h3>List of works</h3>
    <h1>Movies</h1>
    <table>
      <thead>
        <th width="80">Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th width="100">Published</th>
        <th width="100">Upvote</th>
      </thead>
      <% Work.order_by_votes("movie").each do |work| %>
      <tr>
        <td><%= work.votes.count %></td>
        <td><%= link_to work.title, work_path(work.id), alt: "Link to work"%></td>
        <td><%= work.creator %></td>
        <td><%= work.publication_year %></td>
        <td><span class="button"<%= link_to "Upvote", work_votes_path(work.id), method: :post, alt: "Link to Upvote this Work" %></span></td>
      </tr>
      <% end %>
    </table>

