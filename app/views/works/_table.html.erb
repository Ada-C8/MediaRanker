<table>
  <tr>
    <th>Votes</th>
    <th>Title</th>
    <th>Created By</th>
    <th>Published</th>
    <th>Upvote</th>
  </tr>
  <tr>
      <%works = Work.all%>
      <% works.each do |work| %>
      <% if work.category == @cat %>
      <th>
      <%=work.vote.count %>
    </th>
    <th>
      <%= link_to work.title, work_path(work.id), class: "link"%>
    </th>
    <th>
      <%= work.creator%>
    </th>
    <th>
      <%= work.pub_year %>
    </th>
    <th>
      <%= link_to "Upvote!", work_vote_path(work.id), class: "button"%>
    </tr>
    <%end%>

    <%end%>


</table>
