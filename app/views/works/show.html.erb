<main>

  <article>
    <h3><%= @work.title %></h3>
    <p><%= @work.creator %></p>
    <p><%= @work.publication_year %></p>
    <p><%= @work.description %></p>

  </article>
  <article>
    <a><%= link_to("Back to media ranks", root_path, alt: "link to media ranker home page") %></a>
    <a><%= link_to("Edit", edit_work_path(@work.id), alt: "link to edit work") %></a>
    <a><%= link_to("Upvote", work_votes_path(@work.id), method: :post, alt: "link to upvote this work") %></a>
    <a><%= link_to("Delete", work_path(@work.id), method: :delete, alt: "link to delete this work", data: {confirm: "Are you sure you want to delete this work?"}) %></a>

  </article>
  <h3><%= "#{@work.votes.length} Votes for this #{@work.category.capitalize}"%></h3>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <%= @work.votes.each do |vote| %>
      <tr>
        <td><%= vote.user.name %></td>
        <td><%= (vote.created_at).strftime('%d-%m-%Y') %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</main>
