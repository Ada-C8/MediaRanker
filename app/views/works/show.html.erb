

<main class ='row'>
  <article class='media-details columns large-6 small-12'>
    <h3>
      <%= @work.title %>
    </h3>

    <p>
      Created by <%= @work.creator %>
    </p>

    <p>
      Published: <%= @work.published %>
    </p>

    <p>
      <%= @work.description %>
    </p>

    <nav>
      <%= link_to 'Back to media ranks', works_path, :class => 'button' %>
      <%= link_to 'Edit', edit_work_path, :class => 'button' %>
      <%= link_to 'Upvote', upvote_work_path(@work), method: :post, :class => 'button' %>
      <%= link_to 'Delete', work_path(@work), :class => 'red_button', method: :delete, data: { confirm: "Are you sure?" } %>
    </nav>
  </article>

  <article class= 'columns large-6 small-12'>
    <h3>
      <%= @votes.count %> Votes for this work
    </h3>

    <table>

        <tr>
          <th>User</th>
          <th>Date</th>
        </tr>

      <tbody>
        <% @votes.each do |vote| %>
         <tr>
           <td><%= link_to ApplicationHelper.find_user(vote.user_id), user_path(vote.user_id)%> </td>
           <td><%= vote.date %></td>
          </tr>
        <% end %>

      </tbody>
    </table>
  </section>




</main>
