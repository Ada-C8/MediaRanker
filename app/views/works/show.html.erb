<article class="media-details columns large-6 small-12">
  <h3><%= @work.title %></h3>
  <p>Created by: <%= @work.creator %> </p>
  <p>Published: <%= @work.publication_year %> </p>
  <p><%= @work.description%> </p>
  <section>
    <%= link_to "Back to media ranks", root_path, class: "button" %>
    <%= link_to "Edit", edit_work_path(@work.id), class: "button" %>
    <td><%= link_to "Upvote", upvote_path(@work.id), class: "button upvote", method: :post%></td>
    <%= link_to "Delete", work_path(@work.id), method: :delete,
        data: { confirm: "Are you sure?" }, class: "button" %>
  </section>
</article>

<article class="voting-users columns large-6 small-12">
  <h3> Votes for this <%= @work.category %></h3>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <tr>........
      </tr>
    <tbody>
  </table>
</article>
