<main>

  <article>
    <h3><%= @work.title %></h3>
    <p> Created by: <%= @work.creator %></p>
    <p> Published: <%= @work.publication_year %></p>
    <p> <%= @work.description %></p>
      <%= link_to("Back to media ranks", works_path) %>
      <%= link_to("Edit", edit_work_path(@work.id))%>
      <%= link_to("Upvote", votes_path(:work => @work.id), method: :post )%>
      <%= link_to("Delete", work_path(@work.id), method: :delete )%>
  </article>
  <article>
    <h3><%= @work.votes.count %> Votes for this <%= @work.category %></h3>
    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% @work.votes.each do |vote| %>
        <tr>
          <td><%= link_to(vote.user.name, user_path(vote.user.id)) %></td>
          <td><%= vote.created_at.strftime("%B %d, %Y") %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

  </article>

</main>
