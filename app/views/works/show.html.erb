<%= params %>

<h2><%= @work.title %></h2>
<p>Created by: <%= @work.creator %></p>
<p>Published: <%= @work.publication_year %></p>
<p>Description: <%= @work.description %></p>


<ul>
  <li><%= link_to "Back to media ranks", root_path %></li>
  <li><%= link_to "Edit", edit_work_path %></li>
  <li><%= link_to "Delete", work_path(@work.id), method: :delete, data: { confirm: "Are you sure you want to delete #{@work.title}?" } %></li>
</ul>
