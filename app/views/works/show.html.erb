<br><br><h1>Need to work on UpVote and displaying the users who voted for this work.

<%= params %>
</h1><br><br>


<h3>
  <strong><%= @work.title %></strong>
</h3>
<div class="">
  <p>Created by: <%= @work.creator %></p>
  <p>Published: <%= @work.publication_year %></p>

</div>

<section>
  <%= link_to "Home", root_path %>
  <%= link_to "Edit", edit_work_path %>
  <%= link_to "UpVote" %>
  <%= link_to "Delete", work_path, method: :destroy, data: { confirm: "Are you sure?" } %>
</section>
<table>
  <tr>
    <th>User</th>
    <th>Date</th>
  </tr>



    <% @work.votes.each do |vote| %>
      <tr>
        <strong>
          <td><%= link_to User.find(vote.user_id).name, work_user_path(:work_id) %></td>
          <td><%= Vote.find(vote.user_id).updated_at %></td>
        </strong>
      </tr>
    <% end %>

</table>
