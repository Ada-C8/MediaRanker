<h2><%= @work.title %></h2>
<p>Created by: <%= @work.creator %></p>
<p>Published: <%= @work.publication_year %></p>
<%= button_to 'Edit', edit_work_path(@work.id), method: :get%>
<%= button_to 'Delete', delete_work_path(@work.id), method: :delete%>

<h2><%= @work.votes.length %> votes for this <%= @work.category.titleize %></h2>
<table>
  <tr>
    <th>User</th>
    <th>Date</th>
  </tr>
  <% @work.votes.each do |vote| %>
    <tr>
      <td><%= link_to vote.user.username, user_path(vote.user_id) %></td>
      <td><%= vote.created_at.strftime("%b %d, %Y")%></td>
    </tr>
  <% end %>
</table>
