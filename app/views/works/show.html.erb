
<p><%= @work.id %></p>
<p><%= @work.title %></p>
<p><%= @work.creator %></p>
<p><%= @work.category %></p>
<p><%= @work.publication_year %></p>
<p><%= @work.description %></p>

<p><%= link_to 'Edit', edit_work_path(@work.id) %></p>
<p><%= link_to 'Delete', work_path(@work.id), method: :delete, data: {confirm: "Are you sure you want to delete this work?"} %></p>

<% if session[:user_id] %>
  <%= link_to 'Upvote', upvote_path, method: :post %>
<% end %>
