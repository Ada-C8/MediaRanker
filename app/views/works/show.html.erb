<article class="media-details columns large-6 small-12">
  <h3><%= @work.title %></h3>
  <p>Created by: <%= @work.creator %></p>
  <p>Published: <%= @work.publication_year %></p>
  <p><%= @work.description %></p>
  <section>
    <%= link_to "Back to media ranks", root_path, class: "button" %>
    <%= link_to "Edit", edit_work_path(@work.id), class: "button" %>
    <%= link_to "Upvote", votes_path(work: @work), class: "button", method: :post %>
    <%= link_to "Delete", delete_work_path(@work.id), class: "alert button", method: :delete, data: {confirm: "Are you sure?"} %>
  </section>
</article>

<article class="voting-users columns large-6 small-12">
  <h3><%= "#{@work.votes.count} Votes for this #{@work.category.capitalize}" %></h3>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <% @work.votes.each do |vote| %>
      <tr>
        <td><%= link_to vote.user.username, user_path(vote.user.id) %></td>
        <td><%= vote.created_at.strftime("%b %d, %Y") %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</article>
