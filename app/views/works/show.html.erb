<h3> <%= @work.title %></h3>

<% if @work.errors.any? %>
  <ul class="errors">
    <% @work.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<section class = "work-info">
  <p>
    <%= "Created by: #{@work.creator}"%>
  </p>
  <p>
    <%= "Published: #{@work.publication_year}"%>
  </p>
  <p>
    <%= " #{@work.description}"%>
  </p>

</section>

<section class = "show-page-buttons">
  <%= link_to "Back to media ranks", root_path, class: :button %>
  <%= link_to "Edit", edit_work_path, class: :button %>
  <%= link_to "Delete", delete_work_path, method: :delete, data: {confirm: "Are you sure?"}, class: :button %>
</section>

