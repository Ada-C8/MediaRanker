<section>
  <h2><%= @work.title %></h2>
  <p>Created by: <%= @work.creator %></p>
  <p>Published: <%= @work.publication_year %></p>
  <p><%= @work.description %></p>
  <nav>
    <%= link_to "Back to media ranks", root_path, class: "button" %>
    <%= link_to "Edit", edit_work_path(@work.id), class: "button" %>
    <%= link_to "Upvote FIX ME!!", work_path(@work.id), class: "button" %>
    <%= link_to "Delete", delete_work_path(@work.id), class: "alert button" %>
  </nav>
</section>

<section>
  <h2><%= "? Votes for this #{@work.category.capitalize}" %></h2>
  <table>
    <tr>
      <th>User</th>
      <th>Date</th>
    </tr>
    <tr>
      <!-- TODO setup works.votes loop -->
      <td>@work.votes as a link</td>
      <td>@work.votes date created</td>
    </tr>
  </table>
</section>
