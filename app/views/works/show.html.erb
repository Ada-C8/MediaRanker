<article class="media-details columns large-6 small-12">
  <h3><%= @work.title %></h3>
  <p>
    Created by: <%= @work.creator %>
  </p>
  <p>
    Published: <%= @work.publication_year %>
  </p>
  <p>
    <%# not sure what goes here %>
  </p>
  <section>
    <%= link_to "back to media ranks", root_path, class: "button" %>
    <%= link_to "Edit", edit_work_path(@work), class: "button" %>
    <%= link_to "Upvote", upvote_work_path(@work), method: :post, class: "button" %>
    <%= link_to "Delete", work_path(@work), method: :delete, data: {confirm: "Would you like to delete this work?"}, class: "button allert" %>
  </section>
</article>
<article class="voting users columns large-6 small-12">
  <h3><%= @work.votes.count %> Votes for this <%=@work.category%></h3>
  <table>
    <thead>
      <tr>
        <th>
          User
        </th>
        <th>
          Date
        </th>
      </tr>
    </thead>
    <tbody>
      <% @work.votes.each do |vote| %>
      <tr>
        <td>
          <%= vote.user.name %>
        </td>
        <td>
          <%= vote.created_at.strftime("%b %d, %Y") %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</article>
