<h1>Works#show</h1>
<p>Find me in app/views/works/show.html.erb</p>

<h2><%=@work.title%></h2>
<ul>
  <li>
    <strong>Work ID: </strong> <%=@work.id%>
  </li>
  <li>
    <strong>Category: </strong><%=@work.category%>
  </li>
  <li>
    <strong>Publication Year: </strong><%=@work.pub_year%>
  </li>
  <li>
    <strong>Creator: </strong><%=@work.creator%>
  </li>
  <li>
    <strong>Description: </strong><%=@work.description%>
  </li>
  <li>
    <strong>Votes: </strong><%=@work.total_votes(@work.id)%>
  </li>
</ul>

<ul>
  <li>
    <%=link_to("Back to media ranks", home_path, alt:'Ranked media page') %>
  </li>
  <li>
    <%=link_to("Edit", edit_work_path(@work.id), alt:'Edit Work Details')%>
  </li>
  <li>
    Upvote
  </li>
  <li>
    <%= link_to("Delete", delete_work_path(@work.id), method: :delete, data: {confirm: "Are you sure you would like to delete this work?"}) %>
  </li>
</ul>
