<main class="row">
    <article class="media-details columns large-6 small-12">
      <h3><%= @work[:title]  %></h3>
      <p>Created by: <%= @work[:title]  %></p>
      <p>Published: <%= @work[:publication_year] %></p>
      <p><%= @work[:description] %></p>

      <section>
        <a class="button" <%= link_to("Back to media ranks", root_path) %> </a>

        <a class="button" <%= link_to("Edit", edit_work_path(@work)) %> </a>

        <a class="button" <%= link_to("Upvote", vote_path(@work.id), method: :post) %></a>

        <a class="alert button" data-confirm="Are you sure?" rel="nofollow" data-method="delete" <%= link_to 'Delete',
        work_path(@work),
        method: :delete,
        data: { confirm: 'Are you sure?' } %> </a>
      </section>
    </article>

    <article class="voting-users columns large-6 small-12">
      <h3><%= "#{@work.votes.count} Votes for this work" %></h3>
      <table>
        <thead>
          <tr>
            <th>User</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% @work.votes.each do |vote| %>
          <tr>
             <td><a><%= link_to(vote.user.username, user_path(vote.user_id)) %></a></td>
             <td> <%= vote.created_at.strftime("%b %d, %Y") %> </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </article>
</main>
