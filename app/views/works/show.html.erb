
<section>
<h3> <%= @work.title %> </h3>
<% if @work.creator != nil || @work.creator == "Unknown" %>
<h4> <%= "by #{@work.creator}" %> </h4>
<%end%>
  <ul>
    <li> Category: <%= @work.category %> </li>
    <li> Publication Year: <%= @work.publication_year %> </li>
    <li> Description: <%= @work.description %> </li>
  </ul>
</section>

<section>
<%=link_to "Edit", edit_work_path %>
<%=link_to "Delete", work_path, method: :delete, data: { confirm: "Are you sure you want to delete this #{@work.category}?" } %>
</section>
