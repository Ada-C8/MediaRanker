<main class="grid-x show-work">

  <section class="small-12 large-6 cell work-info">
    <h2 class="title-green"><%= @work.title %></h2>
    <p>Created by: <%= @work.creator %></p>
    <p>Published: <%= @work.year %></p>
    <p><%= @work.desc %></p>

    <div class="link-buttons">
      <%= link_to "Back to media ranks", root_path, class: "button" %>
      <%= link_to "Edit", edit_work_path(@work), class: "button" %>
      <%= link_to "Upvote", new_work_vote_path(@work[:id]), class: "button" %>
      <%= link_to "Delete", work_path(@work), method: :delete, data: { confirm: 'Are you sure you want to delete this work?'}, class: "alert button" %>
    </div>
  </section>

  <section class="small-12 large-6 cell vote-info">
    <h2 class="title-green"><%= @work.votes.length %> Votes for this <%= @work.category.capitalize%></h2>
    <table class="voted-users">
      <thead>
        <tr>
          <th>User</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% @work.votes.each do |vote| %>
        <tr>
          <td><%= vote.user.name %></td>
          <td><%= vote.date.strftime("%b %d, %Y") %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </section>

</main>
