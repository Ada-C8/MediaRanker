<h1>Work show view</h1>

<h3><%= @work.title %></h3>
<p>Created by: <%= @work.creator %></p>
<p>Published: <%= @work.publication_year %></p>
<p><%= @work.description %></p>
<section>
  <%= link_to "Back to media ranks", root_path, class: "button" %>
  <%= link_to "Edit", edit_work_path(@work), class: "button" %>
  <%= link_to "Upvote", votes_path(work_id: @work.id), method: :post, class: "button"%>
  <%= link_to "Delete", work_path(@work), method: :delete, data: { confirm: 'Are you sure you want to delete this?' }, class: "button" %>
</section>

<h3><%= @work.votes.count%> Votes for this <%= @work.category.capitalize %></h3>
<table>
  <thead>
    <tr>
      <td>User</td>
      <td>Date</td>
    </tr>
  </thead>
  <tbody>
    <% @work.votes.each do |vote| %>
      <tr>
        <td><%= vote.user.username%></td>
        <td><%= vote.created_at.to_date%></td>
      </tr>
    <% end %>
  </tbody>
</table>
