<div class="small-12 large-6 columns">
  <h3><%= @work.title %></h3>
  <p>Created by: <%= @work.creator %></p>
  <p>Published: <%= @work.publication_year %></p>

  <%= link_to "Back to media ranks", root_path, class: "button" %>
  <%= link_to "Edit", edit_work_path, class: "button" %>
  <%= link_to "Upvote", votes_path(work_id: @work.id), method: :post, class: "button" %>
  <%= link_to "Delete", work_path(@work.id), method: :delete, class: "button delete" %>
</div>

<div class="small-12 large-6 columns">
  <h3><%= @work.votes.count %> Votes for this
    <%= @work.category.capitalize %></h3>

  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <% @work.votes.each do |vote| %>
        <tr>
          <td><%= vote.user.name %></td>
          <td><%= vote.created_at.strftime('%d %b %Y') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
