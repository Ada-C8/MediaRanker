<h3><%= @work.title %> Was Loved By: </h3>

<% list_users = @work.list_users(@work.id) %>
<% list_users.each do |u| %>
  <h4><%= u %></h4>
<% end %>


<ul>
  <li>Category: <%= @work.category %></li>
  <li>Creator: <%= @work.creator %></li>
  <li>Year: <%= @work.publication_year %></li>
  <li>Description: <%= @work.description %></li>
</ul>

<%= link_to "Edit Work", edit_work_path, class: "warning button" %>
<%= link_to "Delete Work", work_path(@work.id), class: "alert button", method: :delete, data: {:confirm => "Are you sure you want to delete this Work?"} %>
