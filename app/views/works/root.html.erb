<section class="row-spotlight">
  <div>
    <h3>
      <span class="media-spotlight-header">Media Spotlight: <%= @top.title %> by: <%= @top.creator %></span>
    </h3>
    <p>
      <%= @top.votes.count %> votes - <%= @top.description %>
    </p>
  </div>
</section>
<hr class="root-hr">
