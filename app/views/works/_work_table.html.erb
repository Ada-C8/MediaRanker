<section class="media-table">
  <% data = @works.where(category: "type") %>
  <h4><%# TODO: %>Make this be the work category </h4>
  <table>
    <thead>
      <tr>
        <th width="80">
          Votes
        </th>
        <th>
          Title
        </th>
        <th>
          Created By
        </th>
        <th width="100">
          Published
        </th>
        <th width="100">
          Upvote
        </th>
      </tr>
    </thead>
    <tbody>
      <%= data.each do |work| %>
      <tr>
        <td>
          <%= work.votes.count %>
        </td>
        <td>
          <%= work.title %>
        </td>
        <td>
          <%= work.creator %>
        </td>
        <td>
          <%= work.publication_year %>
        </td>
        <td>
          Upvote
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</section>
