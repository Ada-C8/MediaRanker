
<h3>List of Users</h3>
<main>
<table>
  <thead>
    <tr>
      <th>Username</th>
      <th width="100">Votes</th>
      <th width="200">Joined</th>
    </tr>
  </thead>
  <% @users.each do |user| %>
  <tbody>
    <tr>
      <td><%= link_to user.name, user_path(user), class: "link"%></td>
      <td><%= user.vote.count %></td>
      <td><%= user.created_at.strftime("%b, %d %Y") %></td>
    </tr>
    <% end %>
  </tbody>>
  </table>

    <%= link_to "Back to Media List", root_path, class: "button"%>


</main>
