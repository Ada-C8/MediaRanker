<main class="row">
  <h3>List of Users</h3>
  <table>
    <thead>
      <tr>
        <th>Username</th>
        <th width="100">Votes</th>
        <th width="200">Joined</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td data-label="Username">
          <%= link_to user.username, user_path(user.id) %>
        </td>
        <td data-label="Votes">
          VOTES
        </td>
        <td data-label="Joined">
          <%= user.created_at.strftime("%B %d, %Y") %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</main>
