<h1>List of Users</h1>

<% if @users.count == 0 %>
  <p>No user registered yet!</p>
<% else %>
  <ul>
    <% @users.each do |user| %>
    <li><%= link_to(user.username, user_path(user.id)) %> | votes | Joined: <%= user.created_at %> </li>
    <% end %>
  </ul>
<% end %>

<%= button_to("Back to Media List", works_path, method: :get) %>
