<h1>List of Users</h1>
<table>
  <tr>
    <th>
      Username
    </th>
    <th>
      Votes
    </th>
    <th>
      Joined
    </th>
  </tr>
  <% @users.each do |user| %>

  <tr>
    <td>
      <%=link_to user.username, work_path(user.id)%>
    </td>
    <td>
      <%=user.vote_count%>
    </td>
    <td>
      <%=user.date_joined.strftime('%b %d, %Y') %>
    </td>
  </tr>
  <% end %>

</table>
