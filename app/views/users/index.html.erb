<%= render partial: 'layouts/header' %>
<main class='row'>
  <h3> List of Users </h3>
  <table>
    <thead>
      <th> Username </th>
      <th width = '100'> Votes </th>
      <th width = '200'> Joined </th>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td> <%= link_to user.name, user_path(user) %> </td>
          <td> <%= votes_for_users(user) %></td>
          <td> <%= user.joined_on %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'Back to Media List', root_path, :class => 'button' %>
</main>
