<%# view all users! so many! %>
<h1>
  List of users
</h1>

<section> <%# list of users %>
  <ul> <%# title row %>
    <strong>
      <li>Username</li>
      <li>Votes</li>
      <li>Joined</li>
    </strong>
  </ul>

  <ul>
    <% users.each do |user| %>
      <li>
        <%= link_to user.username, user_path(user.id) %>
      </li>
      <li>
        <%= user.votes.count %>
      </li>
      <li>
        <%# joined %>
      </li>
    <% end %>
  </ul>
</section>

<footer>
  <nav><%= link_to 'Back to Media List', root_path %></nav>
</footer>
