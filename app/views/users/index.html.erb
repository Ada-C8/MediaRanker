<h2>List of Users</h2>

<% if @users.count == 0 %>
  <p>No user registered yet!</p>
<% else %>
  <table>
    <tr>
      <th scope="columns">Username</th>
      <th scope="columns">Votes</th>
      <th scope="columns">Joined</th>
    </tr>
    <%  @users.each do |user| %>
      <tr>
        <td><%= link_to(user.username, user_path(user.id)) %></td>
        <td><%= user.number_of_vote %></td>
        <td><%= user.created_at.strftime('%a %d %b %Y') %></td>
      </tr>
    <%  end %>
  </table>
<% end %>

<%= button_to("Back to Media List", works_path, method: :get) %>
