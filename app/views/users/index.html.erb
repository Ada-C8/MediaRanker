<h3>List of Users</h3>
<table>
  <thead>
  <tr>
    <th>
      Username
    </th>
    <th>
      Votes
    </th>
    <th>
      Joined
    </th>
  </tr>
</thead>
  <% @users.each do |user| %>

  <tr>
    <td>
      <%=link_to user.username, user_path(user.id) %>
    </td>
    <td>
      <%=user.votes.count%>
    </td>
    <td>
      <%=user.date_joined.strftime('%b %d, %Y') %>
    </td>
  </tr>
  <% end %>

</table>
<%=link_to "Back to Media List", root_path, class: "button"  %>
