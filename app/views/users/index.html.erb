<main class="row">
  <h3>List of Users</h3>

  <table>
    <thead>
      <tr>
        <th>Username</th>
        <th>Votes</th>
        <th>Joined</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.votes.length %></td>
        <td><%= user.created_at.strftime("%b %-d, %Y") %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "Back to Media List", root_path, class: "button" %>
</main>
