<div class="row">
  <div class="large-12">
    <h1>List of Users</h1>
    <section>
      <table>
        <thead>
          <tr>
            <th>Username</th>
            <th>Votes</th>
            <th>Joined</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr><!-- For each vote a user has  -->
            <td><%= link_to(user.username, user_path(user.id)) %></td>
            <td><%= user.votes.length %></td>
            <td><%= user.created_at.strftime("%b %d, %Y") %></td>
          </tr><!-- End loop  -->
          <% end %>
        </tbody>
      </table>
    </section>
  </div>
</div>
