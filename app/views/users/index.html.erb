<main class="row">
  <h3>List of Users</h3>
  <table>

    <thead>
      <tr>
        <th>Username</th>
        <th class="width">Votes</th>
        <th class="more-width">Joined</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, user_path(user.id)%></td>
          <td><%= Vote.where(user_id: user.id).count %></td>
          <td><%= user.created_at.to_date %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "Back to Media List", works_path, class:"button" %>
</main>
