
<h3> User Summary <%= @user.name %>
<p> Joined site <%= @user.created_at %>
</p>

<h4> Votes </h4>

<table>
  <thead>
    <tr>
      <th>Media Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Category</th>
      <th>Voted On</th>
    </tr>
  </thead>
  <tbody>
    <% Vote.votes_by_user(@user).each do |vote| %>
      <% @work = Work.find_by(id: vote.work_id) %>
        <tr>
          <td> <%= link_to "#{@work.title}", work_path(@work.id) %> </td>
          <td> <%= @work.creator %> </td>
          <td> <%= @work.publication_year %> </td>
          <td> <%= @work.category %> </td>
          <td> <%= vote.created_at %> </td>
        </tr>
    <% end %>
  </tbody>
</table>
