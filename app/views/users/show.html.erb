<h3>User Summary: <%=@user.username%></h3>
<p>
  Joined site <%=@user.date_joined.strftime('%b %d, %Y') %>
</p>
<h4>Votes</h4>
<table>
  <thead>
  <tr>
    <th>
      Media Title
    </th>
    <th>
      Created By
    </th>
    <th>
      Published
    </th>
    <th>
      Category
    </th>
    <th>
      Voted On
    </th>
  </tr>
</thead>
  <% @user.votes.each do |vote| %>
  <tr>
    <td>
      <%=link_to vote.work.title, work_path(vote.work.id)%>
    </td>
    <td>
      <%=vote.work.creator%>
    </td>
    <td>
      <%=vote.work.publication_year%>
    </td>
    <td>
      <%=vote.work.category%>
    </td>
    <td>
      <%=vote.date.strftime('%b %d, %Y')%>
    </td>
  </tr>
  <% end %>
</table>

<%=link_to "See all Users", users_path, class: "button" %>
<%=link_to "Back to Media List", root_path, class: "button" %>
