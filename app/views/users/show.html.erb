<div class="row">
  <div class="large-12 columns">

  <section>
    <h1>User Summary: <%= link_to(@user.username, user_path(@user.id)) %></h1>
    <p>Joined site <%= @user.created_at.strftime("%b %d, %Y") %></p>
  </section>
  <section>
    <h2>Votes</h2>
    <table>
      <thead>
        <tr>
          <th>Media Title</th>
          <th>Created By</th>
          <th>Published</th>
          <th>Category</th>
          <th>Voted On</th>
        </tr>
      </thead>
      <tbody>
        <% @user.votes.each do |vote| %>
        <tr><!-- For each vote a user has  -->
          <td><%= link_to(vote.work.title, work_path(vote.work.id)) %></td>
          <td><%= vote.work.creator %></td>
          <td><%= vote.work.publication_year %></td>
          <td><%= vote.work.category %></td>
          <td><%= vote.created_at.strftime("%b %d, %Y") %></td>
        </tr><!-- End loop  -->
        <% end %>
      </tbody>
    </table>
    <%= link_to("See all Users", users_path, class: "button") %>
    <%= link_to("Back to Media List", root_path, class: "button") %>
  </section>
  </div>
</div>
