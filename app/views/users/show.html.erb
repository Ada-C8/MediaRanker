<h3>User Summary: <%= link_to @user.name, user_path(@user.id) %></h3>
<p>Joined site <%= @user.created_at.strftime('%b %d, %Y') %></p>

<h4>Votes</h4>
<table>
  <tr>
    <th>Media Title</th>
    <th>Created By</th>
    <th>Published</th>
    <th>Category</th>
    <th>Voted On</th>
  </tr>
  <% @user.votes.each do |vote| %>
  <% work = Work.find_by(id: vote.work_id) %>
  <tr>
    <td><%= link_to work.name, work_path(vote.work_id) %></td>
    <td><%= work.creator %></td>
    <td><%= work.publication_year %></td>
    <td><%= work.category.capitalize %></td>
    <td><%= vote.created_at.strftime('%b %d, %Y') %></td>
  </tr>
  <% end %>
</table>
<%= link_to "See All Users", users_path, class: "button" %>
<%= link_to "Back to Media List", root_path, class: "button" %>
