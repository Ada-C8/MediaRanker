<h3> <%= "User Summary: #{@user.username}"%> </h3>
<p> <%= "Joined site #{(@user.created_at).to_date}"%> </p>

<h4> Votes</h4>
<table>
  <thead>
    <tr>
      <th>Media Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Category</th>
      <th>Voted On</th>
    </tr>
  </thead>
  <tbody>
    <% if @user.votes.count > 0%>
      <% @user.votes.each do |vote|%>
      <tr>
        <td><%= link_to "#{vote.work.title}", work_path(vote.work.id)%></td>
        <td><%= "#{vote.work.creator} "%></td>
        <td><%= "#{vote.work.publication_year} "%></td>
        <td><%= "#{vote.work.category} "%></td>
        <td><%= "#{(vote.created_at).to_date} "%></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
