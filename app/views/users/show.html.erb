<main class="row">
    <h3>User Summary: <%= link_to @user.name, user_path(@user.id) %></h3>
<p>Joined site <%= @user.created_at.strftime("%b %d, %Y") %></p>

<h4>Votes</h4>
<table>
  <thead>
    <tr>
      <th>Media Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Category</th>
      <th>Voted On</th>
    </tr>
  </thead>
  <tbody>
    <% @user.votes.each do |vote| %>
      <tr>
        <td>
          <%= link_to vote.work.title, work_path(vote.work.id) %>
        </td>
        <td>
            <%= vote.work.creator %>
        </td>
        <td>
            <%= vote.work.publication_year %>
        </td>
        <td>
            <%= vote.work.category %>
        </td>
        <td>
            <%= vote.created_at.strftime("%b %d, %Y") %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>

<a class="button" href="/users">See all Users</a>
<a class="button" href="/">Back to Media List</a>

  </main>
