
<p>
  <strong>User Summary: <%= link_to @user.name, user_path(@user.id)%></strong>
</p>
<p>
  Joined site <%= @user.created_at.to_date %>
</p>
<h4>Votes</h4>
<table>
  <tr>
    <th>Media Title</th>
    <th>Created By</th>
    <th>Published</th>
    <th>Category</th>
    <th>Voted On</th>
  </tr>
  <tr>
    <% @user.votes.each do |vote| %>
    <tr>
      <td><%= link_to vote.work.title, work_path(vote.work_id) %></td>
      <td><%= vote.work.creator %></td>
      <td><%= vote.work.publication_year %></td>
      <td><%= vote.work.category %></td>
      <td><%= vote.created_at.strftime("%b %d, %Y")%></td>
    </tr>
    <% end %>
  </table>

  <%= link_to "See all Users", users_path %>
  <%= link_to "Back to Media List", root_path %>
