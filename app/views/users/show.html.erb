<section class="row details">
  <h1>User Summary: <%= @user.username %></h1>
  <p>Joined site <%= @user.created_at %></p>

  <h2>Votes</h2>
  <table>
    <tr>
      <th>Media Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Category</th>
      <th>Voted On</th>
    </tr>
    <% @user.votes.each do |vote| %>
    <tr>
      <td><%= link_to vote.work.title, work_path(vote.work.id) %></td>
      <td><%= vote.work.creator %> </td>
      <td><%= vote.work.publication_year %> </td>
      <td><%= vote.work.category %> </td>
      <td><%= vote.created_at.strftime("%b %d, %Y") %> </td>
    </tr>
    <% end %>
  </table>
</section>
