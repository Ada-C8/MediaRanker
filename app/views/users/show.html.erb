<h2>User Summary: <%= @users[:username] %></h2>
<p>Joined site: <%= @users[:created_at].strftime("%B %d, %Y") %></p>

<h2>Votes</h2>

<table>
  <thead>
    <tr>
      <th>Media Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Category</th>
      <th>Voted on</th>
    </tr>
  </thead>
  <tbody>
      <% @user.votes.each do |vote| %>
    <tr>
      <td><%= link_to vote.work.title, work_path(vote.work_id) %></td>
      <td><%= vote.work.creator %></td>
      <td><%= vote.work.publication_year %></td>
      <td><%= vote.work.category %></td>
      <td><%= vote.created_at.strftime("%B %d, %Y") %></td>
      <% end %>
    </tr>
  </tbody>
</table>
<ul>
  <li><%= link_to "See all Users", users_path %></li>
  <li><%= link_to "Back to Media List", root_path %></li>
</ul>
