<h3>User summary: <%= @user.name %></h3>
<p>
  Joined site <%= @user.created_at %>
</p>

<h4>Votes</h4>

<table>
  <thead>
    <tr>
      <th>Media Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Category</th>
      <th>Voted On</th>
    </tr>
  </thead>
  <tbody>
    <% @user.voted_works.each do |work| %>
      <tr>
        <td><%= link_to work.title, work_path(work.id) %></td>
        <td><%= work.creator %></td>
        <td><%= work.publication_year %></td>
        <td><%= work.category %></td>
        <td>inprogress<%# work.vote_by(@user).created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "See all Users", users_path %>

<%= link_to "Back to Media List", root_path %>
