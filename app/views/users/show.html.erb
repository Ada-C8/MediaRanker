<main class="row">
    <h3>User Summary: <%= link_to @user.name, user_path(@user.id) %></h3>
<p>Joined site <%= @user.created_at.strftime("%b %d, %Y") %></p>

<h4>Votes</h4>
<table>
  <thead>
    <tr>
      <th>Media Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Category</th>
      <th>Voted On</th>
    </tr>
  </thead>
  <tbody>
    <% @user.votes.each do |vote| %>
      <tr>
        <td>
          <%= link_to vote.work.title, work_path(vote.work.id) %>
        </td>
        <td>
            <%= vote.work.creator %>
        </td>
        <td>
            <%= vote.work.publication_year %>
        </td>
        <td>
            <%= vote.work.category %>
        </td>
        <td>
            <%= vote.created_at.strftime("%b %d, %Y") %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>

<%= link_to "See all Users", users_path, class: "button" %>

<%= link_to "Back to Media List", home_path, class: "button" %>

  </main>
