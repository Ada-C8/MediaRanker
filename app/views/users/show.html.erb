<main class="large-9 columns, small-3 columns">
<ul>
  <li>Username: <%= @user.username %></li>
  <li>joined Site: <%= @user.created_at.strftime('%m/%d/%Y') %></li>
</ul>


<h2>Votes</h2>
<table class="table">
  <thead>
    <tr>
      <th>Media Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Category</th>
      <th>Voted On</th>
    </tr>
  </thead>
    <% @user.votes.each do |vote| %>
    <tbody>
      <tr>
        <td><%=link_to(vote.work.title, work_path) %></td>
        <td><%= vote.work.creator %></td>
        <td><%= vote.work.publication_year %></td>
        <td><%= vote.work.category %></td>
        <td><%= vote.created_at.strftime('%m/%d/%Y') %></td>
      </tr>
    <% end %>
    </tbody>
</table>


<%= link_to("See All Users",users_path) %>
<%= link_to("Back to Media List", works_path) %>

</main>



