<h1> Individual User detail </h1>
<p>
  <strong>User Summary: <%= @user.name %></strong>
</p>
<p>
  Joined site <%= @user.created_at.to_date %>
</p>

<table>
  <tr>
    <th>Media Title</th>
    <th>Created By</th>
    <th>Published</th>
    <th>Category</th>
    <th>Voted On</th>
  </tr>
  <tr>
<!-- once I've created the array, I can access the individual  -->
    <% @user.get_votes.each do |vote| %>
    <div class="user">
      <td><%= link_to work.title, work_path(work.id) %> </td>
      <td> <%= work.creator %></td>
      <td><%= work.publication_year %></td>
      <td><%= work.category %></td>
      <td><%= vote.created_at %></td>
  <% end %>
</tr>
</table>


