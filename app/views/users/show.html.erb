<h3>User Summary: <%= link_to @user.name, user_path %></h3>
<p>
  Joined site <%= @user.created_at.strftime("%b %-d, %Y") %>
</p>

<h4>Votes</h4>

<table>
  <thead>
    <tr>
      <th>Media Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Category</th>
      <th>Voted On</th>
    </tr>
  </thead>
  <tbody>
    <% @user.votes.each do |vote| %>
      <% @work = vote.work %>
      <tr>
        <td><%= link_to @work.title, work_path(@work) %></td>
        <td><%= @work.creator %></td>
        <td><%= @work.publication_year %></td>
        <td><%= @work.category.name %></td>
        <td><%= vote.created_at.strftime("%b %-d, %Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "See all Users", users_path, class: "button" %>
<%= link_to "Back to Media List", root_path, class: "button" %>
