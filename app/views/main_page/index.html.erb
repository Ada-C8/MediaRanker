<section class= "row spotlight">

<h3><span class="media-spotlight-header">Media Spotlight: </span><%= link_to @top.title, work_path(@top.id) %> by <%= @top.creator %></h3>
<p><%= @top.upvotes.count %> votes - <%= @top.description %></p>
</section>
<hr class="root-hr"/>
<section class="top-ten columns large-4 small-12">
  <h3>Top Books</h3>
  <ul>
    <% @top_books.each do |work| %>
    <li>
      <h4><%= link_to work.title, work_path(work.id) %> <small>by <%= work.creator %></small></h4>
      <p><%= work.upvotes.count %> votes</p>
    </li>
    <% end %>
  </ul>
</section>

<section class="top-ten columns large-4 small-12">
<h3>Top Movies</h3>
<ul>
  <% @top_movies.each do |work| %>
  <li>
    <h4><%= link_to work.title, work_path(work.id) %> <small>by <%= work.creator %></small></h4>
    <p><%= work.upvotes.count %> votes</p>
  </li>
  <% end %>
</ul>
</section>
<section class="top-ten columns large-4 small-12">
<h3>Top Albums</h3>
<ul>
  <% @top_albums.each do |work| %>
  <li>
    <h4><%= link_to work.title, work_path(work.id) %> <small>by <%= work.creator %></small></h4>
    <p><%= work.upvotes.count %> votes</p>
  </li>
  <% end %>
</ul>
</section>
