<h4>
  <%= @category %>
</h4>
<table class ='table'>
  <thead>
    <tr>
      <th>
        Votes
      </th>
      <th>
        Title
      </th>
      <th>
        Created By
      </th>
      <th>
        Published
      </th>
      <th>
        Upvote
      </th>
    </tr>
  </thead>
  <tbody>
    <% @works.each do |work| %>
    <tr>
      <td>
        <%= ApplicationHelper.votes_for_work(work) %>
      </td>

      <td>
        <%= link_to work.title, work_path(work) %>
      </td>

      <td>
        <%= work.creator %>
      </td>

      <td>
        <%= work.published %>
      </td>

      <td>
        <%= link_to 'Upvote', upvote_work_path(work), method: :post, :class => 'button' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
