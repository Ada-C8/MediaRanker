<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker BB</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header >
    <h1 class="row"><%= link_to "Media Ranker", '/', method: :get %> | Ranking the Best of Everything</h1>
    <nav class="row">
      <div class="large-8 small-12 columns">
        <%= link_to "View top media", '/', method: :get %>
        <%= link_to "View all media", works_path, method: :get %>
        <%= link_to "Add a new work", new_work_path, method: :get%>
        <%= link_to "View all users", users_path, method: :get%>
      </div>
      <div>
        <% if session[:username] == nil %>
        <%= link_to "Log In", login_path, method: :get %>
        <% else %>
        <%= link_to "Logged in as #{session[:username]}", user_path(:id), method: :get %>
        <%= link_to "Log Out", logout_path, method: :delete %>
        <% end %>
      </div>
      <div>
        <!-- <h2>Session</h2> -->
        <!-- <%= "logged in as #{session[:username]}" %> -->
<div>

       <!-- <%= "username id number is  #{session[:user_id]}" %> -->
</div>
      </div>
    </nav>
  </header>

  <body>
<section>
<% flash.each do |name, message| %>
<div class= "<%= name %>" > <%= message %> </div>
  <% end %>
</section>


    <%= yield %>


  </body>
</html>
