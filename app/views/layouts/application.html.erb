<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="row">
      <h2 class="small-12-columns"><%= link_to "Media Ranker", root_path %></h2>
      <small>Rank the Best of Everything</small>
      <%# Must fix these %>
      <nav class="row">
        <%= link_to "View top media", root_path, class: "small-6 large-2 columns" %>
        <%= link_to "View all media", works_path, class: "small-6 large-2 columns" %>
        <%= link_to "Add a new work", new_work_path, class: "small-6 large-2 columns" %>
        <%= link_to "View all users", users_path, class: "small-6 large-2 columns" %>
        <div>
          <%= link_to "Log In", root_path %>
        </div>
      </nav>

    </header>

    <%= yield %>

  </body>
</html>
