<% if @user.errors.any? %>
  <ul class="errors">
    <% @user.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<h2>Log In</h2>

<%= form_tag do %>
  <%= label_tag(:username, "Username") %>
  <%= text_field_tag(:username) %>
  <%= submit_tag("Log In", class: "button") %>
<% end %>
