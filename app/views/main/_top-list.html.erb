<ul>
  <% works.each do |work| %>
    <li>
      <h3>
        <%= link_to work.title, work_path(work.id) %>
        <small><%= "by #{work.creator}" if work.creator %></small>
      </h3>
      <p>
        <%= work.votes.count %> vote<%= 's' unless work.votes.count == 1 %>
      </p>
    </li>
  <% end %>
</ul>
