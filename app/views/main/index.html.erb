
<body>
  <section>
    <h1 class="spotlight">Media Spotlight:
      <% @work = Work.find(1) %> <%= @work.title%> by <%= @work.creator %>
    </h1>
    <p># of votes- <%= @work.description %>
    </p>
  </section>

  <h3>Top Movies </h3>
  <% @movies.each do |work| %>
  <p><strong><%= link_to work.title, work_path(work.id) %></p></strong>
  <p>by: <%= work.creator %></p>
  <% end %>

  <h3> Top Books </h3>
  <% @books.each do |work| %>
  <p><strong><%= link_to work.title, work_path(work.id) %></strong></p>
  <p>by: <%= work.creator %></p>
  <% end %>

  <h3> Top Albums</h3>
  <% @albums.each do |work| %>
  <p><strong><%= link_to work.title, work_path(work.id) %></strong></p>
  <p>by: <%= work.creator %></p>
  <% end %>

</body>
