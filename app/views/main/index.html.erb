
<body>
  <main class="row">

  <section class="row spotlight">
    <div>
      <h3>
        <span class="media-spotlight-header">Media Spotlight:</span>
        <a><%= link_to @top.title, work_path(@top.id)%> by <%= @top.creator %></a>
      </h3>
      <p><%= @top.votes.count %> of votes- <%= @top.description %></p>
    </div>
  </section>
  <hr class="root-hr">
  <section class="top-ten columns large-4 small-12">
    <h3>Top Movies </h3>
    <ul>
      <li>
        <% @movies.each do |work| %>
        <h4><%= link_to work.title, work_path(work.id) %>
          <small>by: <%= work.creator %></small></h4>
          <p><%= work.votes.count%> votes </p>
          <% end %>
        </li>
      </ul>
    </section>

      <section class="top-ten columns large-4 small-12">
        <h3> Top Books </h3>
        <ul>
          <li>
            <% @books.each do |work| %>
            <h4><%= link_to work.title, work_path(work.id) %>
              <small>by: <%= work.creator %></small></h4>
              <p><%= work.votes.count%> votes </p>
              <% end %>
            </li>
          </ul>
        </section>

        <section class="top-ten columns large-4 small-12">
          <h3> Top Albums</h3>
          <ul>
            <li>
              <% @albums.each do |work| %>
              <h4><%= link_to work.title, work_path(work.id) %>
                <small>by: <%= work.creator %></small></h4>
                <p><%= work.votes.count%> votes </p>
                <% end %>
              </li>
            </ul>
          </section>

        </main>
      </body>
