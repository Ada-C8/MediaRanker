<body>
  <main class="row">
  <section class="row spotlight">
    <div>
      <h3>
        <% if @media_spotlight != nil%>
          <span class="media-spotlight-header">Media Spotlight:</span>
        <% end %>


<% if @media_spotlight != nil%>
  <h2>Media Spotlight: <%= link_to @media_spotlight.title, work_path(@media_spotlight.id)%> by <%= @media_spotlight.creator%></h2>
<% end %>

<h2>Top Movies</h2>
<ul>
  <% @top_movies.each do |work|%>
    <li><%= link_to work.title, work_path(work.id) %> by <%= work.creator%></li>
  <% end %>
</ul>

<h2>Top Books</h2>
<ul>
  <% @top_books.each do |work|%>
    <li><%= link_to work.title, work_path(work.id) %> by <%= work.creator%></li>
  <% end %>
</ul>

<h2>Top Albums</h2>
<ul>
  <% @top_albums.each do |work|%>
    <li><%= link_to work.title, work_path(work.id) %> by <%= work.creator%></li>
  <% end %>
</ul>
