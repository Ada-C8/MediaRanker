<main>
  <section>
    <div>
      <h3> <%# REMEMBER YOU CAN ACCESS THE NUMBER VOTES SIMPLY BY CALLING THE NAME OF THE OTHER CLASS WORK.VOTES %>
        <% works = Work.all.sort_by { |work| -work.votes.count} %>
        Media Spotlight: <%= works.first.title %>
      </h3>
      <p>
        <%= works.first.votes.count %> of Votes
      </p>
    </div>
  </section>

  <section>
    <h3>Top Movies</h3>
    <% works = Work.where(category: "movie") %>
    <% works.sort_by { |work| -work.votes.count } %>
    <ul>
      <% works.each do |work| %>
      <li>
        <h4><%= work.title %></h4>
        <p><%= work.votes.count %> Votes</p>
      </li>
      <% end %>
    </ul>
  </section>

  <section>
    <h3>Top Books</h3>
