      <% works.each do |work| %>
      <li>
        <h4><%= work.title %></h4>
        <p><%= work.votes.count %> Votes</p>
      </li>
      <% end %>
    </ul>
  </section>

  <section>
    <h3>Top Albums</h3>
    <% works = Work.where(category: "album") %>
    <% works.sort_by { |work| -work.votes.count } %>
    <ul>
      <% works.each do |work| %>
      <li>
        <h4><%= work.title %></h4>
        <p><%= work.votes.count %> Votes</p>
      </li>
      <% end %>
    </ul>
  </section>
</main>
