<h1>Media Spotlight: <%= link_to Work.top_work.title, work_path(Work.top_work.id)%> by <%= Work.top_work.creator%></h1>
<p>
  <%=Work.top_work.votes.count%>-<%=Work.top_work.description%>
</p>
<h2>ORDER BY VOTES!</h2>
<h2>Top Albums</h2>
<table>
  <tr>
    <th>
      Votes
    </th>
    <th>
      Title
    </th>
    <th>
      Created By
    </th>
    <th>
      Published
    </th>
    <th>
      Upvote
    </th>
  </tr>
  <% @works.each do |work| %>
  <% if work.category == "album" %>
    <tr>
      <td>
        <%= work.votes.count %>
      </td>
      <td>
        <%=link_to work.title, work_path(work.id)%>
      </td>
      <td>
        <%=work.creator%>
      </td>
      <td>
        <%=work.publication_year%>
      </td>
      <td>
        <%=link_to "Upvote", upvote_path(work.id), method: :post, class: "button"  %>
      </td>
    </tr>
  <% end %>
  <% end %>

</table>
