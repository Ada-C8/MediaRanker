
<section>
<% work = Work.top %>
<h3>
  <span class="media-spotlight-header">
  Media Spotlight:
  </span>
  <% if work.title != nil %>
    <%= link_to "#{work.title}", work_path(work.id) %> <%= "by #{work.creator}" %>
      <% else %>
      <%= "No Media Yet" %>
<p> <%= "#{work.votes.count} votes" %> </p>
</h3>

</section>

<section class="top-ten columns large-4 small-12">
<h3> Top Albums </h3>
  <ol>
    <% Work.top_ten_albums.each do |work| %>
    <li> <%= link_to "#{work.title}", work_path(work.id)%>
      <small> by <%= work.creator %> </small>
      <p> <%= "#{work.votes.count} votes" %> </p> </li>
    <% end %>
  </ol>
</section>

