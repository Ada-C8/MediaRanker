<!-- this is the main page and should have the top ten of each style of media -->
<article class="small-12 medium-12 large-12 columns">
<h2>Feature</h2>
<feature class="small-12 columns center">
  <% if @feature %>
<%= link_to @feature.title, media_instance_path(@feature.media_type, @feature.id) %> by <%= @feature.creator %>
<% end %>
</feature>
</article>
<article class="small-12 medium-12 large-4 columns">
  <h2>Books</h2>

 <ol>

  <% @books.each do |instance| %>
   <li><%= link_to instance.title, media_instance_path(instance.media_type, instance.id) %>, Votes: <%= instance.votes.count %>
     <% if session[:user].nil? %>
     <p>
       log in to vote
     </p>
     <% else %>
     <%= vote_button(instance, session[:user]['id']) %>
     <% end %>
   </li>
    <% end %>
 </ol>

</article>

