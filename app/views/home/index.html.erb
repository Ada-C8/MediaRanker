<h2>Media Spotlight:
  <% if @media_spotlight %>
  <%= link_to @media_spotlight.title, work_path(@media_spotlight.id) %> by <%= @media_spotlight.creator %></h2>
  <% end %>
  <p><%= "#{@media_spotlight.votes.count}"%> votes - </p>
  <hr>

<section class="top-ten columns large-4 small-12">
  <h2>Top Movies</h2>
  <hr>
  <ul>
    <% Work.top_ten_movies.each do |work| %>
      <li>
        <%= link_to "#{work.title}", work_path(work.id) %> by <%= "#{work.creator}" %>
        <p>
          <%= "#{work.votes.count} votes" %>
        </p>
      </li>
    <% end %>
  </ul>
</section>

