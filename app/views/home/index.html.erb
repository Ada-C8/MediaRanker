<h3>Media Spotlight:
  <span>
    <% if @no_data %>
      <%=@no_data %> </span></h3>
    <% else %>
      <%= link_to "#{@spotlight.title}", work_path(@spotlight)%> by <%= @spotlight.creator %>
  </span>
</h3>
<p>
  <%= @spotlight.votes.count %> votes - <%= @spotlight.description %>
</p>
    <% end %>

<!-- some kind of line break thing -->
<section class='small-12 large-4 columns'>
  <h3>Top Movies</h3>
  <%= render partial: 'top_media_column', locals: { media: @movies } %>
</section>

<section class='small-12 large-4 columns'>
  <h3>Top Books</h3>
  <%= render partial: 'top_media_column', locals: { media: @books } %>
</section>

<section class='small-12 large-4 columns'>
  <h3>Top Albums</h3>
  <%= render partial: 'top_media_column', locals: { media: @albums } %>
</section>
