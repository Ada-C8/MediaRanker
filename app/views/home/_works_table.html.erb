<section class="top-ten columns large-4 small-12">
  <h3>Top <%= model.first.category.capitalize%>s</h3>
  <ul>
    <% model.each do |work| %>
      <li>
        <h4>
          <%= link_to work.title, work_path(work.id) %> <small>by <%= work.creator ? work.creator : "" %></small>
        </h4>
        <p>
          <%= work.votes.count %> votes
        </p>
      </li>
    <% end %>
  </ul>
</section>
